<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.activities.NoteViewer">

    <FrameLayout
        android:id="@+id/viewForShot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/templateBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            tools:background="#74000000">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/date_font"
                android:textColor="#FF9800"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/dayOfWeek"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="1980-1-1" />

            <TextView
                android:id="@+id/dayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#FF9800"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@id/date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/date"
                tools:text="Sun" />

            <ImageView
                android:id="@+id/editTemplate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="8dp"
                android:padding="3dp"
                android:src="@drawable/ic_viewer_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/moodImage"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/date"
                tools:src="@drawable/no_mood" />

            <TextView
                android:id="@+id/moodText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="#949191"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@+id/moodImage"
                app:layout_constraintEnd_toStartOf="@+id/editMood"
                app:layout_constraintStart_toEndOf="@+id/moodImage"
                app:layout_constraintTop_toTopOf="@+id/moodImage"
                tools:text="美化" />

            <ImageView
                android:id="@+id/editMood"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:padding="3dp"
                android:src="@drawable/ic_viewer_edit"
                app:layout_constraintBottom_toBottomOf="@+id/moodImage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/moodImage" />

            <View
                android:id="@+id/tmpLine1"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_line_dash"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/moodImage"
                app:layout_constraintWidth_percent="0.85" />

            <EditText
                android:id="@+id/bodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:enabled="false"
                android:hint="在此处输入"
                android:textColor="#868181"
                android:textColorHint="#EEDBD5D5"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@id/tmpLine1"
                app:layout_constraintStart_toStartOf="@id/tmpLine1"
                app:layout_constraintTop_toBottomOf="@+id/tmpLine1" />

            <ImageView
                android:id="@+id/editBodyText"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:padding="3dp"
                android:src="@drawable/ic_viewer_edit"
                app:layout_constraintEnd_toEndOf="@id/tmpLine1"
                app:layout_constraintTop_toBottomOf="@+id/bodyText" />

            <View
                android:id="@+id/tmpLine2"
                android:layout_width="0dp"
                android:layout_height="3dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_line_dash"
                android:layerType="software"
                app:layout_constraintEnd_toEndOf="@id/tmpLine1"
                app:layout_constraintStart_toStartOf="@id/tmpLine1"
                app:layout_constraintTop_toBottomOf="@+id/editBodyText" />

            <LinearLayout
                android:id="@+id/mediaBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tmpLine2">

                <ImageView style="@style/MediaBarIcon" android:src="@drawable/ic_show_ac_from_btn" />
                <ImageView style="@style/MediaBarIcon" android:src="@drawable/ic_show_ac_little_video" />
                <ImageView style="@style/MediaBarIcon" android:src="@drawable/ic_show_ac_record" />
                <ImageView style="@style/MediaBarIcon" android:src="@drawable/ic_show_ac_takephoto" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imageList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="@id/tmpLine1"
                app:layout_constraintStart_toStartOf="@id/tmpLine1"
                app:layout_constraintTop_toBottomOf="@+id/mediaBar" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recordList"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/tmpLine1"
                app:layout_constraintStart_toStartOf="@id/tmpLine1"
                app:layout_constraintTop_toBottomOf="@+id/imageList" />

            <ImageView
                android:id="@+id/addMedia"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="4dp"
                android:padding="3dp"
                android:src="@drawable/ic_viewer_edit"
                app:layout_constraintEnd_toEndOf="@id/tmpLine1"
                app:layout_constraintTop_toBottomOf="@+id/recordList" />

            <TextView
                android:id="@+id/editStickersButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/green_stroke_start_button"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:text="编辑贴纸"
                android:textColor="#4CAF50"
                android:textSize="10sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addMedia" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/editModeControls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="editTemplate,editMood,tmpLine1,editBodyText,tmpLine2,mediaBar,addMedia,editStickersButton"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.haodustudio.DailyNotes.view.customView.sticker.StickerLayout
            android:id="@+id/stickerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>
</ScrollView>