<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".view.activities.PrivacySettingsActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/privacyScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingStart="12dp"
        android:paddingTop="16dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/privacyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_screen_title"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/privacyBannerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:clickable="false"
                android:focusable="false"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardUseCompatPadding="false"
                app:strokeColor="@color/about_card_stroke"
                app:strokeWidth="1dp">

                <ImageView
                    android:id="@+id/privacyBannerImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/privacy_banner_content_desc"
                    android:scaleType="centerCrop"
                    android:src="@drawable/privacy_banner" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/privacyDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/privacy_banner_description"
                android:textColor="@color/about_secondary_text"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/privacyCardCrash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/about_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/about_card_stroke"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_privacy_icon_container">

                        <ImageView
                            android:id="@+id/privacyCardCrashIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_about_privacy"
                            android:contentDescription="@string/privacy_crash_title" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/privacyCardCrashTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_crash_title"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/privacyCardCrashSubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/privacy_crash_description"
                            android:textColor="@color/about_secondary_text"
                            android:textSize="5sp"
                            android:lineSpacingExtra="1dp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/privacyCardCrashIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/bg_privacy_indicator_on"
                        android:contentDescription="@null" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/privacyCardLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/about_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/about_card_stroke"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_privacy_icon_container">

                        <ImageView
                            android:id="@+id/privacyCardLocationIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/privacy_location"
                            android:contentDescription="@string/privacy_location_title" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/privacyCardLocationTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_location_title"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/privacyCardLocationSubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/privacy_location_description"
                            android:textColor="@color/about_secondary_text"
                            android:textSize="5sp"
                            android:lineSpacingExtra="1dp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/privacyCardLocationIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/bg_privacy_indicator_on"
                        android:contentDescription="@null" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/privacyCardCloud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/about_card_background"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/about_card_stroke"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <FrameLayout
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/bg_privacy_icon_container">

                        <ImageView
                            android:id="@+id/privacyCardCloudIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_gravity="center"
                            android:src="@drawable/privacy_cloud_download"
                            android:contentDescription="@string/privacy_cloud_title" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/privacyCardCloudTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_cloud_title"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="1"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/privacyCardCloudSubtitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/privacy_cloud_description"
                            android:textColor="@color/about_secondary_text"
                            android:textSize="5sp"
                            android:lineSpacingExtra="1dp"
                            android:maxLines="2"
                            android:ellipsize="end" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/privacyCardCloudIndicator"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="6dp"
                        android:src="@drawable/bg_privacy_indicator_on"
                        android:contentDescription="@null" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>