<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>

        <!-- Optional customizations -->
        <item name="android:largeHeap">true</item>
    </style>

    <!-- 启动页 theme -->
    <style name="AppTheme.StartingWindowTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_app_starting</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 禁止右滑退出 -->
    <style name="NoRightSlideTheme" parent="AppTheme">
        <item name="android:windowSwipeToDismiss" tools:ignore="WearBackNavigation">false</item>
    </style>

    <!-- 对话框风格 Activity -->
    <style name="DialogActivityTheme" parent="AppTheme">
        <item name="android:windowSwipeToDismiss" tools:ignore="WearBackNavigation">false</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="DialogActivityTheme2" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
